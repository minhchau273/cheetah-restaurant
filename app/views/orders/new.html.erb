<h1>
  <small>Order for</small> <%= @menu_item.name %>
</h1>

<%= form_for [@menu_item, Order.new] do |f| %>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group row">
        <%= f.label :name, class: 'col-sm-2 form-control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone, class: 'col-sm-2 form-control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :address, class: 'col-sm-2 form-control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :address, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Submit Order", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>  
